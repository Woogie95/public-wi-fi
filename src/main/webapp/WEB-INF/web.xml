<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.example.publicwifi.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>history</servlet-name>
        <servlet-class>com.example.publicwifi.controller.HistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>history</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>load_wifi</servlet-name>
        <servlet-class>com.example.publicwifi.controller.WifiInfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>load_wifi</servlet-name>
        <url-pattern>/load_wifi</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>com.example.publicwifi.controller.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookmark_group</servlet-name>
        <servlet-class>com.example.publicwifi.controller.BookmarkGroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmark_group</servlet-name>
        <url-pattern>/bookmark_group</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookmark</servlet-name>
        <servlet-class>com.example.publicwifi.controller.BookmarkController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmark</servlet-name>
        <url-pattern>/bookmark</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookmark_group_add</servlet-name>
        <servlet-class>com.example.publicwifi.controller.BookmarkGroupAddController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmark_group_add</servlet-name>
        <url-pattern>/bookmark_group_add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookmark_delete</servlet-name>
        <servlet-class>com.example.publicwifi.controller.BookmarkDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmark_delete</servlet-name>
        <url-pattern>/bookmark_delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookmark_group_update</servlet-name>
        <servlet-class>com.example.publicwifi.controller.BookmarkGroupUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmark_group_update</servlet-name>
        <url-pattern>/bookmark_group_update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookmark_group_delete</servlet-name>
        <servlet-class>com.example.publicwifi.controller.BookmarkGroupDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmark_group_delete</servlet-name>
        <url-pattern>/bookmark_group_delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>detail</servlet-name>
        <servlet-class>com.example.publicwifi.controller.WifiDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>

</web-app>

